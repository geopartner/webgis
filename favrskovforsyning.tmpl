<style>
  /* =========================================
     Global & Map Overrides
     ========================================= */
  body { 
    background: #fff; 
  }

  .leaflet-control-graphicscale { 
    box-shadow: none; 
    -webkit-box-shadow: none; 
    white-space: nowrap; 
  }

  /* =========================================
     Main Container Layout
     ========================================= */
  #pane1 {
    position: absolute;
    width: {{printWidth}};
    height: {{printHeight}};
    top: 30px; 
    left: 30px;
    overflow: hidden;
    border: 1px solid #000;
  }

  #container1 {
    position: relative;
    width: 200%; 
    height: 200%;
    left: -50%; 
    top: -50%;
    display: inline-block;
  }

  /* =========================================
     Widgets (Legend, North Arrow, Scalebar)
     ========================================= */
  #legend {
    position: absolute; 
    top: 5px; 
    left: 5px;
    padding: 10px; 
    background: #fff;
    -webkit-transform: scale(0.6);
    -webkit-transform-origin: left top;
    display: {{_showLegend}};
  }

  #northimg { 
    position: absolute; 
    top: 10px; 
    right: 10px; 
  }

  #scalebar {
    position: absolute;        
    height: 20px;
    width: 150px;
    bottom: 11px;      /* Vertical alignment */
    right: 211px;      /* Right alignment */
    z-index: 1000;     /* Ensure visibility over map tiles */
    pointer-events: none;
  }

  /* =========================================
     Header / Footer Module
     ========================================= */
  #header {
    position: absolute;
    width: 640px;
    background-color: white;
    bottom: 0px;
    right: 0px;
    z-index: 1000;
  }

  /* =========================================
     Table Layout Configuration
     ========================================= */
  :root {
    /* Column widths */
    --col-logo: 35%;
    --col1: 25%;
    --col2: 25%;
    --col3: 25%;
    
    /* Row dimensions */
    --hdr-top-row-height: 44px;
    --hdr-bot-row-height: 44px;
    
    /* Border settings */
    --hdr-line: 1px;
  }

  #hdrTable {
    width: 100%;
    border-collapse: collapse;
    table-layout: fixed;
    background: #fff;
  }

  #hdrTable td {
    border: var(--hdr-line) solid #000;
    color: #000;
    font-family: Arial, Helvetica, sans-serif;
    padding: 4px 8px;
    vertical-align: middle;
    overflow: hidden;
  }

  /* Helper Classes */
  .no-wrap { 
    white-space: nowrap; 
  }

  /* Cell Specifics */
  #title-cell { 
    vertical-align: top; 
    white-space: normal; 
  }

  #logo-cell { 
    vertical-align: middle; 
    text-align: center; 
  }

  /* Column Sizing */
  #hdrTable colgroup col.logo { width: var(--col-logo); }
  #hdrTable colgroup col.c1   { width: var(--col1); }
  #hdrTable colgroup col.c2   { width: var(--col2); }
  #hdrTable colgroup col.c3   { width: var(--col3); }

  /* Row Sizing */
  #hdrTable tr.top    { height: var(--hdr-top-row-height); }
  #hdrTable tr.bottom { height: var(--hdr-bot-row-height); }

  /* =========================================
     Typography & Content Styling
     ========================================= */
  #title {
    display: block;
    font-size: 16px;
    font-weight: 700;
    margin: 0 0 2px 0;
    color: #000;
  }

  #comment {
    display: block;
    font-size: 12px;
    font-weight: 400;
    line-height: 1.2;
    color: #000;
    overflow-wrap: break-word;
    word-wrap: break-word;
  }

  #hdrLogo {
    display: block;
    width: 100%;
    height: auto;
    max-height: 80px;
    object-fit: contain;
    padding: 2px;
    box-sizing: border-box;
  }
  
  .label {
    display: block;
    font-size: 10px;
    font-weight: normal;
    color: #333;
    margin-bottom: 1px;
  }
  
  #scale, #coord, #kote {
    display: block;
    font-size: 14px;
    font-weight: 700;
  }
  
  #date-time {
    position: absolute;
    bottom: 0;
    left: 0;
    background-color: white;
    font-size: 0.8em;
    padding: 2px;
    z-index: 1001;
  }
</style>

<div id="pane1">
  <!-- Map Layer -->
  <div id="container1">
    <div id="map"></div>
  </div>

  <!-- Header Module -->
  <div id="header" aria-label="Print header">
    <table id="hdrTable" role="presentation">
      <colgroup>
        <col class="logo"><col class="c1"><col class="c2"><col class="c3">
      </colgroup>

      <tr class="top">
        <td id="logo-cell" rowspan="2">
          <img id="hdrLogo" src="https://raw.githubusercontent.com/geopartner/webgis/master/logo/favrskovforsyning.png" alt="Logo">
        </td>
        <td id="title-cell" colspan="3">
          <!-- Fallback content (&nbsp;) prevents cell collapse if variables are empty -->
          <b id="title">&nbsp;</b>
          <p id="comment">&nbsp;</p>
        </td>
      </tr>

      <tr class="bottom">
        <td class="no-wrap">
          <span class="label">MÃ¥l:</span>
          <span id="scale"></span>
        </td>
        <td class="no-wrap">
          <span class="label">Koordinatsystem:</span>
          <span id="coord">UTM32</span>
        </td>
        <td class="no-wrap">
          <span class="label">Kotesystem:</span>
          <span id="kote">DVR90</span>
        </td>
      </tr>
    </table>
  </div>

  <!-- Graphic Scalebar Container -->
  <div id="scalebar"></div>

  <!-- Auxiliary Widgets -->
  <div id="northimg">
    <img style="width:30px" src="https://raw.githubusercontent.com/geopartner/webgis/master/logo/NorthArrow_02.svg">
  </div>
  
  <div id="legend"></div>
  
  <div id="date-time">Udskrevet {{printDataTime}}</div>
</div>